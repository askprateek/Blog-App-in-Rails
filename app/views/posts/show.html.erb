<p id="notice"><%= notice %></p>
<div class="articlehead">
  <h1><%= @post.title %></h1>
</div>
<div class="adminlinks">
  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  <% end %>
</div>
<div class="articlebody">
  <p><%= @post.body %></p>
</div>
<div class="comments">
  <% @post.comments.each do |comment| %>
  <div class="commentor">
    <%= comment.name %>
  </div>
  <div class="comment">
   <%= comment.body %>
  </div>
  <% end %>
</div>
