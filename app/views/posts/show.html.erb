<p id="notice"><%= notice %></p>

<h2 class="title">
  <strong><%= @post.title %></strong>
</h2>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>


<div id="post_content">
  ...

  <div id="comments">
    <h2><%= @post.comments.count %> Comments</h2>
    <%= render @post.comments %>

    <h3>Add a comment:</h3>
    <%= render "comments/form" %>
  </div>
</div>
