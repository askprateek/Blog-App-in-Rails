<div class="commentor">
  <div class="row" >
  <div class="col-sm-10">
  <h4><%= comment.name %> </h2>
    <h5><%= comment.created_at %> </h5>
  </div>
  <div class="col-sm-2 commentdelete">
    <% if user_signed_in? %>
    <p><%= link_to 'Delete', [comment.post, comment],
                    method: :delete,
                    class: "button",
                      data: { confirm: 'Are you sure?' } %>
                    </p>
    <% end %>
  </div>
  </div>
</div>
<div class="row">
 <div class="col-sm-12">
   <div class="comment">
    <%= comment.body %>
    </div>
  </div>
</div>
